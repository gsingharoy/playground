{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "filesGlob": [
    "main.ts",
    "typings.d.ts",
    "app/**/*.ts",
    "!app/**/*.spec.ts"
  ],
  "files": [
    "app/app.component.ts",
    "app/hero-detail.component.ts",
    "app/hero.ts",
    "app/main.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
